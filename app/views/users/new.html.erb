<div class="row">
    <div class="col-sm-10">

<%= form_for(@user, html: {class: 'form-horizontal'}) do |f| %>
    <h1>Sign Up</h1>
          <div class="form-group">
            <%= f.label :name, for: :name, class: 'col-xs-3 control-label' %>
            <div class="col-sm-offset-2 col-sm-10">
             <%= f.text_field :name, class: 'form-control' %>
            </div>
          </div>
          
          <div class="form-group">
            <%= f.label :email, for: :email, class: 'col-xs-3 control-label' %>
            <div class="col-sm-offset-2 col-sm-10">
              <%= f.text_field :email,  class: 'form-control' %>
            </div>
          </div>
          
          <div class="form-group">
            <%= f.label :password, for: :password,  class: 'col-xs-3 control-label' %>
            <div class="col-sm-offset-2 col-sm-10">
              <%= f.text_field :password,  class: 'form-control' %>
            </div>
          </div>
          
          <div class="form-group">
              <%= f.label :password_confirmation, for: :password_confirmation, class: 'col-xs-3 control-label' %>
              <div class="col-sm-offset-2 col-sm-10">
              <%= f.text_field :password_confirmation,  class: 'form-control' %>
            </div>
          </div>
          
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <%= f.submit "Sign Up",  class: 'form-control btn btn-success' %>
            </div>
          </div>
<% end %>
          <div class="form-group">
              <div class="col-sm-offset-2 col-sm-10">
                 <%= link_to "Sign in", root_url , class: 'form-control btn btn-primary' %> 
              </div>
          </div>
    </div>
</div>
