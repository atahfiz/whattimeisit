<div class="row">
    <div class="col-sm-10">

<%= form_for(:session, url: login_path, html: {class: 'form-horizontal'}) do |f| %>
    <h1>Sign In</h1>
          <div class="form-group">
            <%= f.label :email, for: :email, class: 'col-xs-3 control-label' %>
            <div class="col-sm-offset-2 col-sm-10">
              <%= f.text_field :email,  class: 'form-control' %>
            </div>
          </div>
          
          <div class="form-group">
            <%= f.label :password, for: :password,  class: 'col-xs-3 control-label' %>
            <div class="col-sm-offset-2 col-sm-10">
              <%= f.text_field :password,  class: 'form-control' %>
            </div>
          </div>
          
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <%= f.submit "Sign In",  class: 'form-control btn btn-primary' %>
            </div>
          </div>
<% end %>
          <div class="form-group">
              <div class="col-sm-offset-2 col-sm-10">
                 <%= link_to '<span class="glyphicon glyphicon-plus"> Sign Up </span>'.html_safe, new_path, class: 'form-control btn btn-success' %> 
              </div>
          </div>
    </div>
</div>

