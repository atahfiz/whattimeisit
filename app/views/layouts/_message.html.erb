<div class="container">
    <div class="row">
      <div class="col-sm-10">
      <% flash.each do |name, msg| %>
          <%= content_tag :div, msg,  class: "alert alert-#{name} alert-dismissible" %>
          <button type="button" class="close" data-dismiss="alert">
            <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
          </button>
      <% end %>
      </div>
    </div>
</div>